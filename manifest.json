{
    "name": "cr-pwgen",
    "version":"0.0.1",
    "manifest_version":2,
    "description": "Chromium extension to insert generated passwords",
    "permissions": ["contextMenus"],
    "background": {
        "scripts": ["src/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["src/content.js"]
        }
    ],
    "icons": {
        "16": "assets/cr-pwgen16.png",
        "48": "assets/cr-pwgen48.png",
        "128": "assets/cr-pwgen128.png"
    }
}

